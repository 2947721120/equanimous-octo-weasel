navbar.navbar-default.navbar-fixed-top.navbar-inverse
  .container
    a.navbar-brand(href='') jsDelivr
    form.navbar-form.navbar-left
      .form-group
        input(type='search', placeholder='Search', ng-model='search', ng-change="select('q', search)").form-control
.container-fluid(ng-if='hits')
  p(ng-show='info') Showing #[b {{info.start}}] - #[b {{info.stop}}] of #[b {{info.total}}] Results #[small.text-muted ({{info.time}}ms)]

  .panel.panel-default(ng-repeat='lib in hits')
    .panel-heading
      a(ui-sref='detail(lib)', ng-bind-html='lib._highlightResult.name.value')
      .pull-right
        small {{lib.lastversion}}
    .panel-body
      {{lib.description}}

  ul.pager
    li.previous
      a(href='', ng-disabled='!page.hasPrev', ng-click='select_page(page.prev)') #[i.fa.fa-arrow-left] Previous Page
    li.next
      a.next(href='', ng-disabled='!page.hasNext', ng-click='select_page(page.next)') Next Page #[i.fa.fa-arrow-right]
.container-fluid(ng-if='hits.length == 0')
  .text-center
    p No Results
    a(href='', ng-click='reset()') Reset

.container-fluid(ng-if='!hits')
  .text-center Loading...
